{
  "name": "honojs-template",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop all",
    "restart:pm2": "pm2 restart all",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "rbac:init": "tsx scripts/init-rbac.ts",
    "docker:build": "docker build -t honojs-template .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "monitoring:up": "docker-compose -f docker-compose.monitoring.yml up -d",
    "monitoring:down": "docker-compose -f docker-compose.monitoring.yml down",
    "monitoring:restart": "docker-compose -f docker-compose.monitoring.yml restart",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.17.1",
    "@hono/zod-validator": "^0.4.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@prisma/client": "^5.20.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "hono": "^4.8.10",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2",
    "prom-client": "^15.1.3",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.9.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.15.0",
    "pm2": "^5.4.2",
    "prisma": "^5.20.0",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}