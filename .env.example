# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/honojs_template"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Application Configuration
NODE_ENV="development"
PORT=3000
API_PREFIX="/api/v1"

# Logging Configuration
LOG_LEVEL="info"
LOG_TO_FILE=false

# Security
JWT_SECRET="your-super-secret-jwt-key-here"
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_ENABLED=true

# Enterprise Monitoring (Optional - Prometheus + Grafana)
ENABLE_METRICS=false
METRICS_PORT=9464
PROMETHEUS_URL="http://localhost:9090"
GRAFANA_URL="http://localhost:3001"

# OpenTelemetry (Optional)
ENABLE_TRACING=false
OTEL_SERVICE_NAME="honojs-template"
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4317"

# Alerting (Optional)
ALERTMANAGER_URL="http://localhost:9093"
ALERT_EMAIL_FROM="alerts@honojs-template.com"
ALERT_EMAIL_TO="admin@honojs-template.com"